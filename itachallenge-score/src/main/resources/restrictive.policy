grant {

    // Allows writing to any file, necessary to create Main.java
    permission java.io.FilePermission "<<ALL FILES>>", "write";

    // Allows reading the system property line.separator
    permission java.util.PropertyPermission "line.separator", "read";

    // Allows accessing declared members in classes
    permission java.lang.RuntimePermission "accessDeclaredMembers";

    // Allows suppressing access checks in reflection
    permission java.lang.reflect.ReflectPermission "suppressAccessChecks";

    // Allows executing other processes (javac, java)
    permission java.lang.RuntimePermission "exec";

    // Additional permission to write to the specific directory
    permission java.io.FilePermission "/usr/app/Main.java", "write";
};
